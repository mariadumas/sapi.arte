<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head.ejs") %>
</head>

<body>
    <%- include("../partials/header.ejs") %>

        <section class="form-container">
            <h2 class="form-title">Editá tu perfil</h2>
            <form action="/user/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <label for="first_name">Nombre</label>
                <input type="text" id="first_name" name="first_name" value="<%= user.first_name %>">  

                <label for="last_name">Apellido</label>
                <input type="text" id="last_name" name="last_name" value="<%= user.last_name %>">
                
                <label for="email">Correo electrónico</label>
                <input type="text" id="email" name="email" value="<%= user.email %>">

                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" value="<%= user.password %>">

                <label for="avatar">Imagen de perfil</label>
                <input type="file" id="avatar" name="avatar">

                <label for="dni">DNI</label>
                <input type="text" id="dni" name="dni" value="<%= user.dni %>">

                <label for="birth_date">Fecha de nacimiento</label>
                <input type="date" id="birth_date" name="birth_date" value="<%= user.birth_date %>">

                <label for="address">Domicilio</label>
                <input type="text" id="address" name="address" value="<%= user.address %>">


        
                <button type="submit" class="form-buttton">Editar perfil</button>



            </form>
        </section>


        <%- include("../partials/footer.ejs") %>

</body>

</html>